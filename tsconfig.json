{
  "compilerOptions": {
    "noImplicitAny": true,
    "strict": true,
    "module": "commonjs",
    "target": "ES2021",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "outDir": "build",
    "sourceMap": true,
    "paths": {
      "@bot-actions": ["./src/bot-actions/"],
      "@constants": ["./src/constants/"],
      "@models": ["./src/models/"],
      "@utils": ["./src/utils/"],
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ],
}